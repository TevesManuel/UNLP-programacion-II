programa ejemplo
procesos
  proceso trabajrFlores(ES flores:numero; ES papeles:numero)
  comenzar
    repetir papeles
      depositarPapel
    repetir (papeles + 1)
      depositarFlor
    flores := 0
    papeles := 0
  fin
  
  proceso seguirAvanzando(ES seguir: boolean;E flores: numero;E papel: numero)
  comenzar
    seguir := flores >= (papeles + 1)
  fin
  
  proceso recorrerAvenida(E numAv: numero)
  variables
    seguir: boolean
    flores:numero
    papeles:numero
  comenzar
    Pos(numAv, 1)
    seguir := V
    mientras seguir
      mientras HayFlorEnLaEsquina
        tomarFlor
        flores := flores + 1
      mientras HayPapelEnLaEsquina
        tomarPapel
        papeles := papeles + 1
      seguirAvanzando(seguir, flores, papeles)
      si seguir
        trabajarFlores(flores, papeles)
        mover
  fin
areas
  ciudad: AreaC (1,1,100,100)
robots
  robot robot1
  comenzar
    recorrerAvenida(9)
  fin
variables
  R_info: robot1
comenzar
  AsignarArea(R_info, ciudad)
  Iniciar(R_info, 1,1)
fin
